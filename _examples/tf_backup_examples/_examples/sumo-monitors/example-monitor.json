{
    "name": "tf-winevent-new-useradded",
    "description": "Alerts when a new local user is added on a Windows host",
    "type": "MonitorsLibraryMonitorExport",
    "monitorType": "Logs",
    "evaluationDelay": "0m",
    "alertName": null,
    "runAs": null,
    "notificationGroupFields": [
      "_sourcehost"
    ],
    "queries": [
      {
        "rowId": "A",
        "query": "_sourceName=Security\n| where eventid = \"4720\"\n| where %\"provider.name\" = \"Microsoft-Windows-Security-Auditing\""
      }
    ],
    "triggers": [
      {
        "detectionMethod": "LogsStaticCondition",
        "triggerType": "Critical",
        "resolutionWindow": null,
        "timeRange": "-15m",
        "threshold": 0,
        "thresholdType": "GreaterThan",
        "field": "eventid"
      },
      {
        "detectionMethod": "LogsStaticCondition",
        "triggerType": "Warning",
        "resolutionWindow": null,
        "timeRange": "-15m",
        "threshold": 0,
        "thresholdType": "GreaterThan",
        "field": "eventid"
      },
      {
        "detectionMethod": "LogsStaticCondition",
        "triggerType": "ResolvedCritical",
        "resolutionWindow": "-15m",
        "timeRange": "-15m",
        "threshold": 0,
        "thresholdType": "LessThanOrEqual",
        "field": "eventid"
      },
      {
        "detectionMethod": "LogsStaticCondition",
        "triggerType": "ResolvedWarning",
        "resolutionWindow": "-15m",
        "timeRange": "-15m",
        "threshold": 0,
        "thresholdType": "LessThanOrEqual",
        "field": "eventid"
      }
    ],
    "timeZone": "America/Chicago",
    "notifications": [
      {
        "notification": {
          "connectionType": "Email",
          "recipients": [
            "dchow@xtecsystems.com"
